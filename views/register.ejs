<% include partials/head.ejs %>


<div class="container">

    <% if (errors !== undefined){ %>
      <div class="error-container">
      <h3 class = 'alert alert-warning'>PLEASE CORRECT THE ERRORS AND RESUBMIT</h3>
      <ul class="errors">
      <% for (const error of errors){ %>
        <li>
          <%= error.msg %>
        </li>

      <% } %>
      <%if(exists == true){%>
      <li>
        Username is already taken
      </li>
      <%}%>
      </ul>
    </div>
    <% } %>
<form action="/register" method="post">
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="username">Username</label>
    <div class="col-sm-10">
    <input type="text" class="form-control" name="username" />
  </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="password">Password</label>
    <div class="col-sm-10">
    <input type="password" class="form-control" name="password"/>
  </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="vpassword">Verify Password</label>
    <div class="col-sm-10">
    <input type="password" class="form-control" name="vpassword"/>
  </div>
  </div>
  <button id="submit" type="submit" class="btn btn-primary">Continue</button>
</div>


</form>
</div>
<% include partials/foot.ejs %>
